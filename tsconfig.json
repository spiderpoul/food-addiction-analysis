{
  "compilerOptions": {
      "outDir": "./build/",
      "sourceMap": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es2015", "es2017", "dom"], 
      "plugins": [
        {
          "name": "typescript-styled-plugin"
        }
      ]   
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
      "./src/*"
  ]
}